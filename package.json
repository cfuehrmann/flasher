{
  "dependencies": {
    "@types/markdown-it": "^0.0.7",
    "github-markdown-css": "^3.0.1",
    "markdown-it": "^8.4.2",
    "preact": "10.0.0-beta.0",
    "w3-css": "^4.1.0"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.2",
    "husky": "^2.1.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "dev": "parcel index.html",
    "build": "parcel build index.html",
    "lint": "tslint src/*.ts src/*.tsx -p \"tsconfig.json\" -t verbose",
    "watch-lint": "chokidar src/*.ts src/*.tsx -c \"yarn lint\" --initial --verbose",
    "prettier": "prettier --write src/*.{ts,tsx} *.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
